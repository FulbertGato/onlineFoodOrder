{% extends 'backend.html.twig' %}

{% block title %}Listes des utilisateurs{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-8">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Gerer les utilisateurs</h4>
                   
                    <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                        <tr>

                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Email</th>
                            <th>Actions</th>
                            
                        </tr>
                        </thead>


                        <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{user.nom}}</td>
                            <td>{{user.prenom}}</td>
                            <td>
                                {{user.email}}
                                
                            </td>

                            <td>
                               <button  type="submit" name="btn_save" class="btn btn-warning waves-effect waves-light me-1">Modifier</button>
                               <button  type="submit" name="btn_save" class="btn btn-danger waves-effect waves-light me-1">Supprimer</button>
                                
                            </td>
                            
                        </tr>
                        {% endfor %}
                        
                        
                        </tbody>
                    </table>

                </div>
            </div>
        </div> <!-- end col -->
        <div class="col-4">
               
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ajouter un Gestionnaire</h4>
                        <form class="custom-validation" action="{{path('app_gestionnaire')}}" method="post">
                            <div class="mb-3">
                                <label class="form-label">Nom</label>
                                <input type="text" class="form-control" required name="nom" value="{% if userSelect is defined %}{{userSelect.nom}}{% endif %}"/>
                                <input hidden type="text" name="id" value="{% if userSelect is defined %}{{userSelect.id}}{% else %} 0 {% endif %}">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Prenom</label>
                                <input type="textr" class="form-control"  name="prenom"  value="{% if userSelect is defined %}{{userSelect.prenom}}{% else %}  {% endif %}"/>
                            </div>


                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" required name="email" value="{% if userSelect is defined %}{{userSelect.email}}{% endif %}"/>  
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control"  name="password" />
                            </div>
                            <div>
                                <div>
                                {% if userSelect is defined %}
                                    <button type="submit" name="btn_edit" class="btn btn-warning waves-effect waves-light me-1">Modifier</button>
                                {% else %}
                                    <button  type="submit" name="btn_save" class="btn btn-primary waves-effect waves-light me-1">
                                        Ajouter
                                    </button>
                                {% endif %}
                                    
                                    <button type="reset" class="btn btn-secondary waves-effect">
                                        Annuler
                                    </button>
                                </div>
                            </div>
                        </form>
        
                </div>
            </div>
         </div>
    </div> <!-- end row -->
{% endblock %}
