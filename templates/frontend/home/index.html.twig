{% extends 'base.html.twig' %}

{% block content %}
   <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-intro padding-y">
        <div class="container">
            <!-- ==============  COMPONENT SLIDER  BOOTSTRAP ============  -->
            <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="{{asset('assets/frontend/images/banners/slider1.jpg')}}" alt="First slide"> 
                    </div>
                    <div class="carousel-item">
                        <img src="{{asset('assets/frontend/images/banners/slider2.jpg')}}" alt="Second slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div> 
            <!-- ============ COMPONENT SLIDER BOOTSTRAP end.// ===========  .// -->	
        
        </div> <!-- container end.// -->
    </section>
<!-- ========================= SECTION MAIN END// ========================= -->


<div class="container">

    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading mb-4">
            <h3 class="title-section text-center">Nos Burgers</h3>
        </header>

        <div class="row">
           {% for burger in burgers %}
            <div class="col-xl-3 col-lg-3 col-md-4 col-6 mt-3">
                <div class="card">
                    <a href="{{path('burger_detail',{code:burger.code})}}" class="img-wrap"> <img src="{{asset('uploads/product/')}}{{burger.image}}"> </a>
                    <figcaption class="info-wrap">
                        
                        <div class="text-center">
                            
                            <a href="{{path('burger_detail',{code:burger.code})}}" class="title">{{ burger.nom }}</a>
                        </div>
                        <div class="price h5 mt-2 text-center">{{ burger.prix}} CFA</div> <!-- price.// -->
                    </figcaption>
                </div>
            </div> <!-- col.// -->
            {% endfor %}
        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->


    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading mb-4">
            <h3 class="title-section text-center">Nos Menus</h3>
        </header>

        <div class="row">
        {% for menu in menus %}
            <div class="col-xl-3 col-lg-3 col-md-4 col-6">
                <div class="card ">
                     <a href="{{path('menu_detail',{code:menu.code})}}" class="img-wrap"><img src="{{asset('uploads/product/')}}{{menu.image}}"></a>
                    <figcaption class="info-wrap">
                        
                        <div class="text-center">
                            
                            <a href="{{path('menu_detail',{code:menu.code})}}" class="title">{{ menu.nom }}</a>
                        </div>
                        <div class="price h5 mt-2   text-center">{{ menu.prix}} CFA</div> <!-- price.// -->
                    </figcaption>
                </div>
            </div> <!-- col.// -->
            {% endfor %}
        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->
	
   

</div>  
<!-- container end.// -->
{% endblock %}