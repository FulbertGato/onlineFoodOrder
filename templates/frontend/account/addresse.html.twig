{% extends 'menu.html.twig' %}

{% block main %}
		<main class="col-md-9">

		<button type="button" class="btn btn-light mb-3" data-toggle="modal" data-target="#exampleModal"> <i class="fa fa-plus"></i> Add new address </button>

        <div class="row">
            {% for add in user.adresses %}
                <div class="col-md-6">
                    <article class="box mb-4">
                        <h6>{{add.nom}}</h6>
                        <p>Zone: {{add.zone.nom}} <br> Addresse: {{add.fullAddresse}} <br> Indication: {{add.indication}}</p>
                        <a href="#" class="btn btn-light"> <i class="fa fa-pen"></i> </a>   <a href="#" class="btn btn-light"> <i class="text-danger fa fa-trash"></i>  </a>
                    </article>
                </div>  <!-- col.// -->
            {% endfor %}
        </div> <!-- row.// -->

	</main> <!-- col.// -->

   

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" action="{{path("save_address")}}">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ajouter une addresse</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                
                    <div class="form-group">
                        <label>Nom de l'addresse</label>
                        <input type="text"  name="nom" class="form-control" placeholder="maison"  required>
                        
                    </div> <!-- form-group end.// -->
                    <div class="form-row">
                        <div class="col form-group">
                            <label>Zone</label>
                            
                            <select name="zone" class="form-control" required>  
                                {% for zone in zones %}                           
                                 <option value="{{zone.id}}">{{zone.nom}}</option>
                                {% endfor %}
                            </select>
                        </div> <!-- form-group end.// -->
                        <div class="col form-group">
                            <label>Addresse</label>
                            <input type="text" name="fulldd" class="form-control" placeholder="nom" required>
                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row end.// -->

                    <div class="form-group">
                        <label>Indication</label>
                        <input type="text"  name="indication" class="form-control" placeholder="maison">
                        
                    </div>
            
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
        </div>
    </div>
    </div>
{% endblock %}