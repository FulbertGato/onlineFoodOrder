{% extends 'base.html.twig' %}

{% block content %}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
<div class="container">



<div class="row">
    {% for burger in burgers %}
	<div class="col-md-3">
		<figure class="card">
			<div class="img-wrap"> 
				
				<img src="{{asset('uploads/product/')}}{{burger.image}}">
			</div> <!-- img-wrap.// -->
			<figcaption class="info-wrap text-center">
					<a href="{{path('burger_detail',{code:burger.code})}}" class="title mb-2">{{burger.nom}}</a>
					<div class="price-wrap text-center">
						<span class="price">{{burger.prix}} CFA</span> 
						
					</div> <!-- price-wrap.// -->
					<hr>

					<a href="{{path('cart_add',{code:burger.code})}}" class="btn btn-outline-primary"> <i class="fa fa-shopping"></i> Ajouter au panier</a>	
					
			</figcaption>
		</figure>
	</div> <!-- col.// -->
    {% endfor %}

</div> <!-- row end.// -->

</div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->


{% endblock %}